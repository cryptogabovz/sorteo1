                                    </div>
                                <% } %>
                            </div>
                        </div>
                    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://unpkg.com/react@18/umd/react.development.js"></script>
    <script src="https://unpkg.com/react-dom@18/umd/react-dom.development.js"></script>
    <script>
        // Cargar MUI X-Charts din치micamente
        const script = document.createElement('script');
        script.src = 'https://unpkg.com/@mui/x-charts@7.0.0/umd/index.js';
        script.onload = function() {
            console.log('MUI X-Charts cargado correctamente');
            window.muiChartsLoaded = true;
        };
        script.onerror = function() {
            console.error('Error cargando MUI X-Charts');
        };
        document.head.appendChild(script);
    </script>
    <script src="/js/admin-dashboard.js"></script>


    <script>
        // Datos del gr치fico
        const dailyMetrics = <%- JSON.stringify(dailyMetrics || []) %>;
        let currentDays = 7;

        console.log('Datos del gr치fico:', dailyMetrics);

        // Funci칩n para preparar datos del gr치fico
        function prepareChartData(data, days) {
            if (!data || data.length === 0) {
                // Crear datos vac칤os para los 칰ltimos d칤as
                const emptyData = [];
                for (let i = days - 1; i >= 0; i--) {
                    const date = new Date();
                    date.setDate(date.getDate() - i);
                    emptyData.push({
                        date: date.toISOString().split('T')[0],
                        participants_count: 0
                    });
                }
                return emptyData;
            }

            return data;
        }

        // Funci칩n para formatear valores
        function valueFormatter(value) {
            return `${value} participantes`;
        }

        // Componente React para el gr치fico simplificado
        function DailyParticipantsChart({ data, days }) {
            const chartData = prepareChartData(data, days);
            console.log('Renderizando gr치fico con:', chartData);

            // Si no hay datos, mostrar mensaje
            if (!chartData || chartData.length === 0) {
                return React.createElement('div', {
                    style: {
                        width: '100%',
                        height: '350px',
                        display: 'flex',
                        alignItems: 'center',
                        justifyContent: 'center',
                        backgroundColor: '#f8f9fa',
                        borderRadius: '8px',
                        color: '#666'
                    }
                },
                    React.createElement('div', { style: { textAlign: 'center' } },
                        React.createElement('div', { style: { fontSize: '48px', marginBottom: '10px' } }, '游늵'),
                        React.createElement('div', null, 'No hay datos disponibles')
                    )
                );
            }

            return React.createElement('div', { style: { width: '100%' } },
                React.createElement('h5', { style: { marginBottom: '20px', color: '#333' } }, 'Participantes Diarios Registrados'),
                React.createElement(mui.xCharts.BarChart, {
                    dataset: chartData,
                    series: [{
                        dataKey: 'participants_count',
                        label: 'Participantes',
                        color: '#007bff'
                    }],
                    xAxis: [{
                        dataKey: 'date',
                        scaleType: 'band',
                        valueFormatter: (value) => {
                            const date = new Date(value + 'T00:00:00');
                            return date.toLocaleDateString('es-ES', {
                                day: '2-digit',
                                month: '2-digit'
                            });
                        }
                    }],
                    height: 350,
                    margin: { left: 60, right: 30, top: 20, bottom: 40 },
                    yAxis: [{
                        width: 60,
                        valueFormatter: valueFormatter
                    }],
                    grid: { vertical: true, horizontal: true },
                    tooltip: {
                        trigger: 'axis',
                        valueFormatter: valueFormatter
                    }
                })
            );
        }

        // Componente principal de la app
        function App() {
            const [chartData, setChartData] = React.useState(dailyMetrics);
            const [days, setDays] = React.useState(currentDays);

            return React.createElement(DailyParticipantsChart, {
                data: chartData,
                days: days
            });
        }

        // Renderizar la app React despu칠s de que MUI se cargue
        function initializeChart() {
            console.log('DOM cargado, inicializando gr치fico...');
            const container = document.getElementById('chart-container');
            if (container) {
                console.log('Contenedor encontrado, verificando MUI...');
                if (typeof mui !== 'undefined' && mui.xCharts) {
                    console.log('MUI disponible, renderizando React...');
                    try {
                        ReactDOM.render(React.createElement(App), container);
                        console.log('React renderizado exitosamente');
                    } catch (error) {
                        console.error('Error renderizando React:', error);
                        container.innerHTML = '<div style="text-align: center; color: red;">Error cargando gr치fico</div>';
                    }
                } else {
                    console.log('MUI no disponible a칰n, esperando...');
                    setTimeout(initializeChart, 100);
                }
            } else {
                console.error('Contenedor del gr치fico no encontrado');
            }
        }

        document.addEventListener('DOMContentLoaded', initializeChart);

        // Funci칩n global para cambiar d칤as (llamada desde botones HTML)
        window.changeDays = async function(days) {
            currentDays = days;

            // Actualizar botones activos
            document.querySelectorAll('.btn-group .btn').forEach(btn => {
                btn.classList.remove('active');
            });
            event.target.classList.add('active');

            try {
                const response = await fetch(`/admin/api/daily-metrics?days=${days}`);
                const result = await response.json();

                if (result.success) {
                    // Re-renderizar el gr치fico con nuevos datos
                    const container = document.getElementById('chart-container');
                    if (container) {
                        ReactDOM.render(
                            React.createElement(DailyParticipantsChart, {
                                data: result.data,
                                days: days
                            }),
                            container
                        );
                    }
                } else {
                    console.error('Error cargando m칠tricas:', result.message);
                }
            } catch (error) {
                console.error('Error:', error);
            }
        };
    </script>
</body>
</html>